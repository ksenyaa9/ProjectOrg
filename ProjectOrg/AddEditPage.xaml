<Page x:Class="ProjectOrg.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectOrg"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="173"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название проекта" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="124"/>
        <TextBlock Text="Стоимость" FontSize="15" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="73"></TextBlock>
        <TextBlock Text="Дата начала" FontSize="15" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="84"></TextBlock>
        <TextBlock Text="Дата окончания" FontSize="15" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="111"></TextBlock>
        <TextBox Grid.Column="1" Grid.Row="0" Width="200" Height="30" HorizontalAlignment="Left" Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"  TextChanged="TextBox_TextChanged"/>
        <TextBox Grid.Column="1" Grid.Row="1" Width="200" Height="30" HorizontalAlignment="Left" Text="{Binding ProjectCost}"/>
        <DatePicker FontSize="20" Grid.Row="2" Grid.Column="1" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" Name="startd" Height="36" ></DatePicker>

        <TextBlock Text="Название организации" FontSize="15" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="20" Width="166" />
        <ComboBox x:Name="OrganizationComboBox" 
          Grid.Row="2" Grid.Column="3"
          DisplayMemberPath="Organization_Name" 
          SelectedValuePath="Organization_ID"
          SelectedValue="{Binding CONTRACT.Organization_ID, UpdateSourceTrigger=PropertyChanged}"
          Width="300" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center"
          />

        <DatePicker FontSize="20" Grid.Row="3" Grid.Column="1" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" Name="endd" Height="36" ></DatePicker>

        <Image Width="300" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Name="LogoImage" Height="116" Grid.RowSpan="3">
            <Image.Source>
                <Binding Path="ProjectPhoto" UpdateSourceTrigger="PropertyChanged">
                    <Binding.TargetNullValue>
                        <BitmapImage UriSource="проекты/picture.png"/>
                    </Binding.TargetNullValue>
                </Binding>
            </Image.Source>
        </Image>
        <ComboBox x:Name="DepartamentComboBox" 
  DisplayMemberPath="Departament_Name" 
  SelectedValuePath="Departament_ID"
  SelectedValue="{Binding Departament_ID, UpdateSourceTrigger=PropertyChanged}"
  Height="30"  Width="300" Grid.Row="0"  Grid.Column="3" HorizontalAlignment="Left"/>

        <ComboBox x:Name="ContractComboBox" 
  DisplayMemberPath="Contract_Number" 
  SelectedValuePath="Contract_ID"
  SelectedValue="{Binding Contract_ID, UpdateSourceTrigger=PropertyChanged}"
  
  Height="30"  Width="300" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left"/>

        <Button Name="ChangePhotoButton" Content="Изменить фото"  Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2"  HorizontalAlignment="Left" Click="ChangePhotoButton_Click" ></Button>
            <Button Name="SaveButton" Content="Сохранить" Grid.Row="6" Grid.ColumnSpan="3" Grid.Column="0" Click="SaveButton_Click" Margin="5"/>
        
        <TextBlock Text="Номер отдела" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Column="2" Height="20" Width="124"  />
        <TextBlock FontSize="15"  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Height="20" Width="159"  Text="Номер контракта"/>

    </Grid>
</Page>