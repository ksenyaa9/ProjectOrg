<Page x:Class="ProjectOrg.ServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectOrg"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicePage" FontFamily="Century Gothic" IsVisibleChanged="Page_IsVisibleChanged_1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Text="Введите название проекта для поиска " TextAlignment="Right" Width="400" FontSize="20"></TextBlock>
                <TextBox x:Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged" Width="250" FontSize="15"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <ComboBox Name="ComboOrganization" SelectionChanged="ComboOrganization_SelectionChanged" 
              FontSize="15" Width="300" DisplayMemberPath="Organization_Name">
                </ComboBox>
            </StackPanel>
        </WrapPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="5">
            <RadioButton Name="RButtonUp" Checked="RButtonUp_Checked" Content="По возрастанию стоимости" GroupName="Sort" Width="300" FontSize="20"></RadioButton>
            <RadioButton Name="RButtonDown" Checked="RButtonDown_Checked"  Content="По убыванию стоимости" GroupName="Sort" Width="300" FontSize="20"></RadioButton>
        </StackPanel>
        <Button Content="Добавить" Name="AddButton" Click="AddButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom"></Button>
        <ListView Name="ServiceListView" Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Width="200" Grid.Column="0" Grid.RowSpan="4" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="ProjectPhoto">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            ph/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding CONTRACT.ORGANIZATION.Organization_Name, StringFormat=Организация: {0}}" 
                   Grid.Column="1" Grid.Row="3" FontSize="20" Margin="5" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ProjectName}" Grid.Column="1" Grid.Row="0" Margin="5" HorizontalAlignment="Left" FontSize="25" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="{Binding ProjectCost, StringFormat=Стоимость проекта: {0} рублей}" Grid.Column="1" Grid.Row="1" FontSize="20" Margin="5"></TextBlock>
                        <StackPanel  Grid.Column="1" Grid.Row="2" Orientation="Horizontal">
                            <TextBlock Text="{Binding start, StringFormat=Дата начала: {0}}" FontSize="20" Margin="5"></TextBlock>
                            <TextBlock Text=" "></TextBlock>
                            <TextBlock Text="{Binding end}"  Margin="5" FontSize="20"></TextBlock>
                            
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal">
                            <Button Name="EditButton" Click="EditButton_Click" Content="редактировать" Margin="2"></Button>
                            <Button Name="DeleteButton" Click="DeleteButton_Click" Content="удалить" Margin="2"></Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Name="TBCount" FontSize="20" Height="20"></TextBlock>
            <TextBlock Name="TBALLRecords" FontSize="20" Height="20"></TextBlock>
            <Button Name="LeftDirButton" Content="&lt;" Width="20" Height="20" Click="LeftDirButton_Click"></Button>
            <ListBox FontSize="20" Name="PageListBox" MouseUp="PageListBox_MouseUp">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            <Button Name="RightDirButton" Content="&gt;" Width="20" Height="20" Click="RightDirButton_Click"></Button>
        </StackPanel>

    </Grid>
</Page>
